{
  "extends": "@nuxt/typescript",
  "compilerOptions": {
    "types": [
      "@types/node",
      "@nuxt/vue-app",
      "./types"
    ],
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "./dist",
    "noEmit": false,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "config": [
        "configs/environment.dev.ts",
        "configs/environment.prod.ts"
      ]
    }
  },
  "exclude": [
    "functions",
    "migrations",
    "scripts"
  ]
}
